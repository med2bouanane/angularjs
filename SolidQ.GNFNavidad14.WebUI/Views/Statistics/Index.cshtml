                                </tbody>



                            </table>
                        </div>
                    </div>
                    <pagination total-items="totalItems" ng-model="currentPage" ng-change="pageChanged()"></pagination>
                    <pre>Mostrando: del {{start+1}} al {{end}} de {{statisticsLang.length}}</pre>
                </div>
                <div id="chartdiv2"></div>
            </div>
        </div>

    </div>
</div>



